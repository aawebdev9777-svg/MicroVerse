rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper to check if user is accessing their own data
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // USERS COLLECTION
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);

      // SUBCOLLECTIONS
      match /ai_messages/{msgId} { allow read, write: if isOwner(userId); }
      match /inbox/{emailId} { allow read, delete: if isOwner(userId); allow create: if isSignedIn(); }
      match /sent_mail/{emailId} { allow read, write: if isOwner(userId); }
      match /games/{gameId} { allow read, write: if isOwner(userId); }
      match /os_state/{docId} { allow read, write: if isOwner(userId); }
      
      // Legacy secure logs (if needed)
      match /secure_logs/{logId} {
        allow create: if isOwner(userId);
        allow read: if false; 
      }
    }

    // GLOBAL LOGS (Yeast Data)
    // Any user can write their actions. 
    // In a real app, only Admins should read. Here we allow read if signed in so AdminApp works for demo.
    match /system_logs/{logId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn(); 
    }

    // CHATS COLLECTION
    match /chats/{chatId}/messages/{msgId} {
      allow read, write: if isSignedIn();
    }
  }
}